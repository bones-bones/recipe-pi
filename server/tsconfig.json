{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "../dist/server",
        "baseUrl": ".",
        "rootDir": "src",
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
